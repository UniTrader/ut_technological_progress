<?xml version="1.0" encoding="UTF-8"?>
<mdscript name="UT_Technological_Progress_Test" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://utnas/~unitrader/XRebirthxsds/md.xsd">
  <cues>
    <cue name="Init">
      <actions>
        <create_group groupname="$Testships"/>
      </actions>
      <cues>
        <cue name="SpawnTestShips" checktime="10s" checkinterval="5s">
          <conditions>
            <cue_is_complete cue="md.Setup.Start"/>
          </conditions>
          <actions>
            <create_ship groupname="$Testships" name="$Testship" zone="player.entity.zone" macro="macro.ship_arg_xl_carrier_01_a_macro" >
              <owner exact="faction.player"/>
              <pilot macro="character_boron_generic_01_macro">
                <owner exact=" faction.player"/>
                <skills>
                  <skill type="boarding" exact="5"/>
                  <skill type="engineering" exact="5"/>
                  <skill type="management" exact="5"/>
                  <skill type="morale" exact="5"/>
                </skills>
              </pilot>
              <loadout>
                <level exact="0"/>
              </loadout>
            </create_ship>
            
          </actions>
        </cue>
        <cue name="ChangeTestShips">
          <conditions>
            <event_player_deactivated_weapongroup weapongroup="1"/>
          </conditions>
          <actions>
            <!--generate_loadout macro="$Testship.macro" result="$loadout"/-->
            <create_loadout result="$loadout">
              <macros>
                <engine macro="engine_arg_xl_travel_01_mk1_macro"/>
                <shield macro="shield_arg_xl_standard_01_mk1_macro"/>
                <shield macro="shield_arg_m_standard_02_mk2_macro"/>
                <turret macro="turret_arg_m_beam_02_mk1_macro"/>
              </macros>
            </create_loadout>
            <apply_loadout object="$Testship" loadout="$loadout"/>
          </actions>
        </cue>
      </cues>
    </cue>
  </cues>
</mdscript>
